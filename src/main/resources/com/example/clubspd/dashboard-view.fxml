<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.fxml.FXML?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.clubspd.DashboardController"
      style="-fx-background-color: #f4f4f4; -fx-padding: 20px;">

    <HBox alignment="CENTER" spacing="20.0">
        <!-- Button 1: Register for events -->
        <Button text="Register for events" onAction="#onRegisterForEventsButtonClick"
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 20px; -fx-padding: 10px 20px; -fx-min-width: 150px; -fx-min-height: 150px;"/>

        <!-- Button 2: View Notices -->
        <Button text="View Notices" onAction="#onViewNoticesButtonClick"
                style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 20px; -fx-padding: 10px 20px; -fx-min-width: 150px; -fx-min-height: 150px;"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20.0">
        <!-- Button 3: Club Previous Products -->
        <Button text="Club Previous Projects" onAction="#onClubPreviousProjectsButtonClick"
                style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-border-radius: 20px; -fx-padding: 10px 20px; -fx-min-width: 150px; -fx-min-height: 150px;"/>

        <!-- Button 4: Ask a Query -->
        <Button text="Ask a query" onAction="#onAskQueryButtonClick"
                style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-border-radius: 20px; -fx-padding: 10px 20px; -fx-min-width: 150px; -fx-min-height: 150px;"/>
    </HBox>
</VBox>
