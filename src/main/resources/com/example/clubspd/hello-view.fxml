<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="1000.0" prefWidth="1000.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clubspd.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <HBox spacing="20.0">
    <!-- Admin Login Section -->
    <VBox>
      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="ADMIN LOGIN" />

      <Label text="Username:" />
      <TextField fx:id="adminuserField" style="-fx-font-size: 14px; -fx-background-color: #F5F5F5;" />

      <Label text="Password:" />
      <PasswordField fx:id="adminpasswordField" prefHeight="26.0" prefWidth="533.0" style="-fx-font-size: 14px; -fx-background-color: #F5F5F5;" />

      <Button onAction="#onAdminLoginButtonClick" style="-fx-font-size: 14px; -fx-background-color: #4CAF50;" text="Login" />

      <Label fx:id="adminloginStatus" style="-fx-text-fill: red; -fx-font-size: 12px;" />
    </VBox>

    <!-- User Login Section -->
    <VBox>
      <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="User Login" />

      <Label text="Username:" />
      <TextField fx:id="usernameField" style="-fx-font-size: 14px; -fx-background-color: #F5F5F5;" />

      <Label text="Password:" />
      <PasswordField fx:id="passwordField" style="-fx-font-size: 14px; -fx-background-color: #F5F5F5;" />

      <Button onAction="#onLoginButtonClick" style="-fx-font-size: 14px; -fx-background-color: #4CAF50;" text="Login" />

      <Label fx:id="loginStatus" style="-fx-text-fill: red; -fx-font-size: 12px;" />
    </VBox>
  </HBox>
</VBox>
